<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/locationTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:textColor="@color/colorPrimary"
                android:textSize="21sp"
                android:textStyle="bold|italic" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/locationTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:paddingStart="10dp"
                        android:text="@string/station_detail_location_detail"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/locationInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="15dp"
                        android:drawableLeft="@drawable/ic_location_black_20dp"
                        android:drawablePadding="15dp"
                        android:gravity="center_vertical"
                        android:lineSpacingExtra="5dp"
                        android:paddingStart="5dp" />

                    <TextView
                        android:id="@+id/latlon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:drawableLeft="@drawable/ic_near_me_black_20dp"
                        android:drawablePadding="15dp"
                        android:gravity="center_vertical"
                        android:paddingStart="5dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray" />

                    <LinearLayout
                        android:id="@+id/contactLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        tools:visibility="visible">

                        <TextView
                            android:id="@+id/telNo1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:autoLink="phone"
                            android:drawableStart="@drawable/ic_local_phone_black_20dp"
                            android:drawablePadding="10dp"
                            android:gravity="center_vertical"
                            android:text="@string/station_detail_undefined"
                            android:textSize="13sp"
                            tools:visibility="visible" />

                        <TextView
                            android:id="@+id/mailAddress"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1"
                            android:autoLink="email"
                            android:drawableStart="@drawable/ic_mail_black_20dp"
                            android:drawablePadding="10dp"
                            android:gravity="center_vertical"
                            android:text="@string/station_detail_undefined"
                            android:textSize="13sp"
                            tools:visibility="visible" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/equipmentDetailTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:paddingStart="10dp"
                        android:text="@string/station_detail_equipment"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/connections"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="7dp"
                        android:drawableLeft="@drawable/ic_power_black_23dp"
                        android:drawablePadding="15dp"
                        android:gravity="center_vertical"
                        android:lineSpacingExtra="7dp"
                        android:paddingStart="5dp"
                        android:text="@string/station_detail_undefined" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/usageTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:paddingStart="10dp"
                        android:text="@string/station_detail_usage_restrictions"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="7dp">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="15dp">

                            <TextView
                                android:id="@+id/isMemberShipTv"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingStart="20dp"
                                android:text="@string/station_detail_membership_required"
                                android:textStyle="bold" />

                            <FrameLayout
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/memberShipReq"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingStart="10dp"
                                    android:paddingEnd="10dp"
                                    android:text="@string/station_detail_undefined"
                                    android:textStyle="italic" />

                                <CheckBox
                                    android:id="@+id/membershipCb"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:clickable="false" />

                            </FrameLayout>

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="15dp">

                            <TextView
                                android:id="@+id/accessKeyTv"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingStart="20dp"
                                android:text="@string/station_detail_access_key_required"
                                android:textStyle="bold" />

                            <FrameLayout
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/accessKeyReq"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingStart="10dp"
                                    android:paddingEnd="10dp"
                                    android:text="@string/station_detail_undefined"
                                    android:textStyle="italic" />

                                <CheckBox
                                    android:id="@+id/accessKeyCb"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:clickable="false" />

                            </FrameLayout>

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="15dp">

                            <TextView
                                android:id="@+id/payAtLocationTv"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingStart="20dp"
                                android:text="@string/station_detail_pay_at_location"
                                android:textStyle="bold" />

                            <FrameLayout
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <TextView
                                    android:id="@+id/payAtLocation"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingStart="10dp"
                                    android:paddingEnd="10dp"
                                    android:text="@string/station_detail_undefined"
                                    android:textStyle="italic" />

                                <CheckBox
                                    android:id="@+id/payAtLocationCb"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:clickable="false" />

                            </FrameLayout>

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="15dp">

                            <TextView
                                android:id="@+id/operationalStatusTv"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingStart="20dp"
                                android:text="@string/station_detail_operational_status"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/operationalStatus"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingStart="8dp"
                                android:paddingEnd="10dp"
                                android:text="@string/station_detail_undefined" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="15dp">

                            <TextView
                                android:id="@+id/usageCostTv"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingStart="20dp"
                                android:text="@string/station_detail_usage_cost"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/usageCost"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingStart="8dp"
                                android:paddingEnd="10dp"
                                android:text="@string/station_detail_undefined" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="7dp">

                            <TextView
                                android:id="@+id/usageTypeTv"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingStart="20dp"
                                android:text="@string/station_detail_usage_type"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/usageType"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingStart="8dp"
                                android:paddingEnd="10dp"
                                android:text="@string/station_detail_undefined" />
                        </TableRow>

                    </TableLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                app:contentPadding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dataProviderTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:paddingStart="10dp"
                        android:text="@string/station_detail_data_provider"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.1"
                            app:srcCompat="@drawable/ic_assignment_black_23dp" />

                        <LinearLayout
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/dataProviderTitleTv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="7dp"
                                android:layout_marginBottom="2dp"
                                android:paddingStart="5dp"
                                android:text="@string/station_detail_undefined"
                                android:textSize="16sp"
                                android:textStyle="bold|italic" />

                            <TextView
                                android:id="@+id/licenseTv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="15dp"
                                android:lineSpacingExtra="2dp"
                                android:paddingStart="5dp"
                                android:text="@string/station_detail_undefined" />

                            <TextView
                                android:id="@+id/dataProviderUrlTv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:autoLink="web"
                                android:paddingStart="5dp"
                                android:text="@string/station_detail_undefined" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:clickable="true"
        android:focusable="true"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_my_location_white_24dp" />

</android.support.design.widget.CoordinatorLayout>